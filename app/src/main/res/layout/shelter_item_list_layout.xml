<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/IV_shelter_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/photo_for_shelter"
        android:scaleType="fitCenter"
        android:src="@drawable/search_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LL_shelter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/IV_shelter_photo"
        app:layout_constraintStart_toStartOf="@+id/IV_shelter_photo"
        app:layout_constraintTop_toBottomOf="@+id/IV_shelter_photo"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/TV_shelter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bottom="@+id/IV_shelterPhoto"
            android:text="@string/shelters" />

        <ImageView
            android:id="@+id/IV_shelter_gender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/gender"
            android:src="@drawable/search_search"
            app:layout_constraintBottom_toBottomOf="@id/TV_shelter_name"
            app:layout_constraintStart_toEndOf="@+id/TV_shelter_name"
            app:layout_constraintTop_toTopOf="@id/TV_shelter_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV_shelter_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/shelters"
        app:layout_constraintEnd_toEndOf="@+id/LL_shelter_name"
        app:layout_constraintStart_toStartOf="@+id/LL_shelter_name"
        app:layout_constraintTop_toBottomOf="@+id/LL_shelter_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
