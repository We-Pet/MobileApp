<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/IV_animalPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/image_for_animal"
        android:scaleType="fitCenter"
        android:src="@drawable/search_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LL_animalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/IV_animalPhoto"
        app:layout_constraintStart_toStartOf="@+id/IV_animalPhoto"
        app:layout_constraintTop_toBottomOf="@+id/IV_animalPhoto"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/TV_animalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bottom="@+id/IV_animalPhoto"
            android:text="@string/animals" />

        <ImageView
            android:id="@+id/IV_animalGender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/gender"
            android:src="@drawable/search_search"
            app:layout_constraintBottom_toBottomOf="@id/TV_animalName"
            app:layout_constraintStart_toEndOf="@+id/TV_animalName"
            app:layout_constraintTop_toTopOf="@id/TV_animalName" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV_animalRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/animals"
        app:layout_constraintEnd_toEndOf="@+id/LL_animalName"
        app:layout_constraintStart_toStartOf="@+id/LL_animalName"
        app:layout_constraintTop_toBottomOf="@+id/LL_animalName" />

</androidx.constraintlayout.widget.ConstraintLayout>
