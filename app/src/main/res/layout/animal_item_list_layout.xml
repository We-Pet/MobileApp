<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IV_animalPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/search_search" />

    <LinearLayout
        android:id="@+id/LL_animalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IV_animalPhoto"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_animalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animals" />

        <ImageView
            android:id="@+id/IV_animalSex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/search_search" />

    </LinearLayout>

    <TextView
        android:id="@+id/TV_animalRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL_animalName"
        android:layout_centerHorizontal="true"
        android:text="@string/animals" />

</RelativeLayout>
